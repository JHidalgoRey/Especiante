<section class="section-shell">
  <div class="page-width reveal" style="max-width: 540px;">
    <div class="section-intro">
      <span class="eyebrow">Mi cuenta</span>
      <h1>{{ section.settings.heading }}</h1>
      <p class="text-muted">{{ section.settings.subheading }}</p>
    </div>

    {% form 'customer_login', class: 'newsletter-form' %}
      {% if form.errors %}
        <div class="app-placeholder" role="alert">{{ form.errors | default_errors }}</div>
      {% endif %}

      <input type="email" name="customer[email]" class="input" placeholder="Email" autocomplete="email" required>
      <input type="password" name="customer[password]" class="input" placeholder="Contraseña" autocomplete="current-password" required>
      <button type="submit" class="btn">{{ section.settings.login_button }}</button>
    {% endform %}

    <p class="text-muted" style="margin-top: 1rem;">
      ¿No tienes cuenta? <a href="{{ routes.account_register_url }}">Crear cuenta</a>
    </p>
  </div>
</section>

{% schema %}
{
  "name": "Login cliente",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Accede a tu cuenta"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Gestiona tu suscripción, dirección y próximos envíos."
    },
    {
      "type": "text",
      "id": "login_button",
      "label": "Texto botón",
      "default": "Iniciar sesión"
    }
  ]
}
{% endschema %}
