<section class="section-shell">
  <div class="page-width reveal">
    <div class="section-intro">
      <span class="eyebrow">{{ section.settings.eyebrow }}</span>
      <h2>{{ section.settings.heading }}</h2>
    </div>

    <div class="grid benefits-grid">
      {% for block in section.blocks %}
        <article class="card" {{ block.shopify_attributes }}>
          <span class="benefit__icon">{% render 'icon-line', icon: block.settings.icon %}</span>
          <h3 style="margin-top: 0.85rem;">{{ block.settings.title }}</h3>
          <p class="text-muted">{{ block.settings.text }}</p>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Beneficios",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Beneficios"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Diseñado para convertir cocina diaria en cocina memorable"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Beneficio",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Ícono",
          "default": "clock",
          "options": [
            { "value": "clock", "label": "Sin fricción" },
            { "value": "star", "label": "Sabor premium" },
            { "value": "truck", "label": "Entrega" },
            { "value": "pan", "label": "Principiantes" }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Sin improvisar"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texto",
          "default": "Sazonas con proporciones listas para funcionar."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Beneficios",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "icon": "clock",
            "title": "Sin adivinar",
            "text": "Todo medido para cocinar con confianza desde el primer intento."
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon": "star",
            "title": "Sabor de restaurante",
            "text": "Capas de sabor diseñadas por país y receta."
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon": "truck",
            "title": "Entrega ligera",
            "text": "Formato compacto, fácil de almacenar y rápido de usar."
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon": "pan",
            "title": "Apto principiantes",
            "text": "Instrucciones concretas para resolver técnica y punto de cocción."
          }
        }
      ]
    }
  ]
}
{% endschema %}
