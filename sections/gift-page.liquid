<section class="section-shell">
  <div class="page-width reveal">
    <div class="section-intro">
      <span class="eyebrow">{{ section.settings.eyebrow }}</span>
      <h1>{{ section.settings.heading }}</h1>
      <p class="text-muted">{{ section.settings.subheading }}</p>
    </div>

    <div class="grid grid--3">
      {% for block in section.blocks %}
        {% if block.type == 'gift_plan' %}
          <article class="card plan-card {% if block.settings.featured %}plan-card--featured{% endif %}" {{ block.shopify_attributes }}>
            {% if block.settings.badge != blank %}<span class="badge">{{ block.settings.badge }}</span>{% endif %}
            <h3 style="margin-top: 0.8rem;">{{ block.settings.name }}</h3>
            <p class="plan-card__price">{{ block.settings.price }}</p>
            <p class="text-muted">{{ block.settings.text }}</p>
            <a href="{{ block.settings.link }}" class="btn" style="margin-top: 1rem;">{{ block.settings.cta }}</a>
          </article>
        {% endif %}
      {% endfor %}
    </div>

    <div style="margin-top: 2rem;">
      <h2>{{ section.settings.faq_title }}</h2>
      <div class="accordion-list">
        {% assign q_index = 0 %}
        {% for block in section.blocks %}
          {% if block.type == 'faq' %}
            {% assign q_index = q_index | plus: 1 %}
            {% assign panel_id = 'GiftFaq-' | append: section.id | append: '-' | append: q_index %}
            <div class="accordion-item" {{ block.shopify_attributes }}>
              <button type="button" class="accordion-trigger" aria-expanded="false" aria-controls="{{ panel_id }}">{{ block.settings.question }}</button>
              <div id="{{ panel_id }}" class="accordion-panel" hidden>{{ block.settings.answer }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Página regalo",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Gift subscription"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Regala un país al mes"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Tarjeta digital inmediata o caja física con mensaje personalizado."
    },
    {
      "type": "text",
      "id": "faq_title",
      "label": "Título FAQ",
      "default": "FAQ de regalos"
    }
  ],
  "blocks": [
    {
      "type": "gift_plan",
      "name": "Plan regalo",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Nombre",
          "default": "Regalo 3 meses"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Precio",
          "default": "€59"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Descripción",
          "default": "Incluye envío y correo de activación."
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge"
        },
        {
          "type": "text",
          "id": "cta",
          "label": "CTA",
          "default": "Comprar regalo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace"
        },
        {
          "type": "checkbox",
          "id": "featured",
          "label": "Destacado",
          "default": false
        }
      ]
    },
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Pregunta",
          "default": "¿Cuándo recibe el regalo?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Respuesta",
          "default": "<p>Recibe un email de activación inmediata o la tarjeta física según opción.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Página regalo",
      "blocks": [
        { "type": "gift_plan", "settings": { "name": "Regalo 1 mes", "price": "€21", "text": "Ideal para probar la experiencia.", "cta": "Regalar 1 mes" } },
        { "type": "gift_plan", "settings": { "name": "Regalo 3 meses", "price": "€59", "text": "El más elegido para sorprender.", "badge": "Popular", "featured": true } },
        { "type": "gift_plan", "settings": { "name": "Regalo anual", "price": "€209", "text": "12 países, ahorro máximo.", "badge": "Premium" } },
        { "type": "faq" },
        { "type": "faq", "settings": { "question": "¿Tiene caducidad?", "answer": "<p>La activación puede realizarse dentro de 12 meses desde la compra.</p>" } }
      ]
    }
  ]
}
{% endschema %}
