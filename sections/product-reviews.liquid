<section class="section-shell">
  <div class="page-width reveal">
    <div class="section-intro">
      <span class="eyebrow">{{ section.settings.eyebrow }}</span>
      <h2>{{ section.settings.heading }}</h2>
      <p class="text-muted">{{ section.settings.subheading }}</p>
    </div>

    <div class="grid grid--3">
      {% for block in section.blocks %}
        {% if block.type == 'quote' %}
          <blockquote class="card" {{ block.shopify_attributes }}>
            <p>"{{ block.settings.quote }}"</p>
            <footer class="text-muted" style="font-size: 0.86rem;">{{ block.settings.author }}</footer>
          </blockquote>
        {% endif %}
      {% endfor %}
    </div>

    <div class="review-snippet">
      <strong>{{ section.settings.app_title }}</strong>
      <p class="text-muted">{{ section.settings.app_text }}</p>
      {% for block in section.blocks %}
        {% if block.type == '@app' %}
          {% render block %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Reseñas producto",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Reseñas"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Opiniones de suscriptores"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Módulo listo para conectar app de reseñas."
    },
    {
      "type": "text",
      "id": "app_title",
      "label": "Título área app",
      "default": "Integración app de reseñas"
    },
    {
      "type": "textarea",
      "id": "app_text",
      "label": "Texto área app",
      "default": "Arrastra un bloque de Judge.me, Loox o Yotpo para mostrar reseñas verificadas."
    }
  ],
  "blocks": [
    {
      "type": "quote",
      "name": "Cita",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Texto",
          "default": "Me llegó en dos días y la receta salió perfecta en 25 minutos."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Autor",
          "default": "Cliente verificado"
        }
      ]
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Reseñas producto",
      "blocks": [
        { "type": "quote" },
        { "type": "quote" },
        { "type": "quote" }
      ]
    }
  ]
}
{% endschema %}
