<section class="section-shell">
  <div class="page-width reveal">
    <div class="section-intro">
      <span class="eyebrow">{{ section.settings.eyebrow }}</span>
      <h2>{{ section.settings.heading }}</h2>
      <p class="text-muted">{{ section.settings.subheading }}</p>
    </div>

    <div class="grid box-inside">
      {% for block in section.blocks %}
        <article class="card" {{ block.shopify_attributes }}>
          <span class="benefit__icon">{% render 'icon-line', icon: block.settings.icon %}</span>
          <h3 style="margin-top: 0.85rem;">{{ block.settings.title }}</h3>
          <p class="text-muted">{{ block.settings.description }}</p>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contenido de la caja",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Qué incluye"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Todo lo necesario para cocinar sin adivinar"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Cada caja combina producto físico y guía digital para que logres sabor de restaurante en casa."
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Elemento",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Ícono",
          "default": "leaf",
          "options": [
            { "value": "leaf", "label": "Blend" },
            { "value": "pan", "label": "Receta" },
            { "value": "play", "label": "Video QR" },
            { "value": "passport", "label": "Passport" }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "3 blends de especias"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Descripción",
          "default": "Perfiles complementarios para platos rápidos y equilibrados."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Contenido de la caja",
      "blocks": [
        {
          "type": "item",
          "settings": {
            "icon": "leaf",
            "title": "3 blends con notas de cata",
            "description": "Blend base, blend de acabado y blend de picor opcional."
          }
        },
        {
          "type": "item",
          "settings": {
            "icon": "pan",
            "title": "Tarjetas de receta",
            "description": "Pasos claros, tiempos reales y sustituciones inteligentes."
          }
        },
        {
          "type": "item",
          "settings": {
            "icon": "play",
            "title": "Video QR + playlist",
            "description": "Escanea y cocina con guía visual en 20-30 minutos."
          }
        },
        {
          "type": "item",
          "settings": {
            "icon": "passport",
            "title": "Passport de países",
            "description": "Colecciona sellos mensuales y sigue tu ruta gastronómica."
          }
        }
      ]
    }
  ]
}
{% endschema %}
