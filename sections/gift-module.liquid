<section class="section-shell">
  <div class="page-width reveal">
    <div class="card split-card">
      <div>
        <span class="eyebrow">{{ section.settings.eyebrow }}</span>
        <h2>{{ section.settings.heading }}</h2>
        <p class="text-muted">{{ section.settings.text }}</p>
        <a class="btn" style="margin-top: 1rem;" href="{{ section.settings.link }}">{{ section.settings.cta }}</a>
      </div>
      <div>
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 1000 | image_tag: widths: '420,640,900', loading: 'lazy', alt: section.settings.image_alt }}
        {% else %}
          <div class="media-placeholder">
            <span>Dirección de arte: caja regalo premium con tarjeta y sello dorado.</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Módulo regalo",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Regalo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Regala un país al mes"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Texto",
      "default": "Gift subscription digital o física para sorprender con sabor y experiencia cultural."
    },
    {
      "type": "text",
      "id": "cta",
      "label": "Texto CTA",
      "default": "Ver opciones de regalo"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Enlace CTA"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Alt imagen",
      "default": "Caja regalo de suscripción de especias"
    }
  ],
  "presets": [
    {
      "name": "Módulo regalo"
    }
  ]
}
{% endschema %}
