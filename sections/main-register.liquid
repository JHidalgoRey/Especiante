<section class="section-shell">
  <div class="page-width reveal" style="max-width: 640px;">
    <div class="section-intro">
      <span class="eyebrow">Crear cuenta</span>
      <h1>{{ section.settings.heading }}</h1>
      <p class="text-muted">{{ section.settings.subheading }}</p>
    </div>

    {% form 'create_customer', class: 'contact-form' %}
      {% if form.errors %}
        <div class="app-placeholder" role="alert">{{ form.errors | default_errors }}</div>
      {% endif %}

      <div class="contact-form__name">
        <input class="input" type="text" name="customer[first_name]" placeholder="Nombre" autocomplete="given-name">
        <input class="input" type="text" name="customer[last_name]" placeholder="Apellido" autocomplete="family-name">
      </div>
      <input class="input" type="email" name="customer[email]" placeholder="Email" autocomplete="email" required>
      <input class="input" type="password" name="customer[password]" placeholder="Contraseña" autocomplete="new-password" required>
      <button type="submit" class="btn">{{ section.settings.register_button }}</button>
    {% endform %}

    <p class="text-muted" style="margin-top: 1rem;">
      ¿Ya tienes cuenta? <a href="{{ routes.account_login_url }}">Iniciar sesión</a>
    </p>
  </div>
</section>

{% schema %}
{
  "name": "Registro cliente",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Crea tu cuenta de miembro"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Gestiona tus suscripciones y pedidos desde un solo lugar."
    },
    {
      "type": "text",
      "id": "register_button",
      "label": "Texto botón",
      "default": "Crear cuenta"
    }
  ]
}
{% endschema %}
