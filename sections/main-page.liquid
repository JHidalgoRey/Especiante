<section class="section-shell">
  <div class="page-width main-page reveal">
    {% if section.settings.show_title %}
      <span class="eyebrow">{{ section.settings.eyebrow }}</span>
      <h1>{{ page.title }}</h1>
    {% endif %}
    <div class="main-page__content rte">
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Página principal",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Mostrar título de página",
      "default": true
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Información"
    }
  ]
}
{% endschema %}
