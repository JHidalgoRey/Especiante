<section class="section-shell">
  <div class="page-width reveal">
    <div class="section-intro">
      <span class="eyebrow">{{ section.settings.eyebrow }}</span>
      <h1>{{ section.settings.heading }}</h1>
      <p class="text-muted">{{ section.settings.subheading }}</p>
    </div>

    <div class="grid grid--3">
      {% for block in section.blocks %}
        <article class="card" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 800 | image_tag: widths: '260,420,800', loading: 'lazy', alt: block.settings.country }}
          {% else %}
            <div class="media-placeholder" style="min-height: 170px;">{{ block.settings.country }}</div>
          {% endif %}
          <h3 style="margin-top: 0.8rem;">{{ block.settings.country }}</h3>
          <p class="text-muted">{{ block.settings.month }}</p>
          <p class="text-muted">{{ block.settings.story }}</p>
          {% if block.settings.blends != blank %}
            <p class="badge" style="margin-top: 0.8rem;">{{ block.settings.blends }}</p>
          {% endif %}
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Países anteriores",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Archivo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Cajas pasadas y próximos destinos"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Consulta países anteriores para ver estilo de blends y recetas publicadas."
    }
  ],
  "blocks": [
    {
      "type": "country",
      "name": "País",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "country",
          "label": "País",
          "default": "México"
        },
        {
          "type": "text",
          "id": "month",
          "label": "Mes",
          "default": "Enero 2026"
        },
        {
          "type": "textarea",
          "id": "story",
          "label": "Historia",
          "default": "Sabores ahumados y cítricos para tacos y guisos rápidos."
        },
        {
          "type": "text",
          "id": "blends",
          "label": "Blends incluidos",
          "default": "Adobo rojo • Mix de chile • Limón tostado"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Países anteriores",
      "blocks": [
        { "type": "country", "settings": { "country": "México", "month": "Enero 2026" } },
        { "type": "country", "settings": { "country": "India", "month": "Diciembre 2025", "blends": "Garam masala • Tikka blend • Chaat masala" } },
        { "type": "country", "settings": { "country": "Italia", "month": "Noviembre 2025", "blends": "Pomodoro rub • Aglio-herb • Peperoncino" } }
      ]
    }
  ]
}
{% endschema %}
