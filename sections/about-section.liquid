<section class="section-shell">
  <div class="page-width reveal">
    <div class="country-feature">
      <div>
        <span class="eyebrow">{{ section.settings.eyebrow }}</span>
        <h1>{{ section.settings.heading }}</h1>
        <p class="text-muted">{{ section.settings.text }}</p>
      </div>
      <div>
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 1200 | image_tag: widths: '480,760,1200', loading: 'lazy', alt: section.settings.image_alt }}
        {% else %}
          <div class="media-placeholder">
            <span>Dirección de arte: mesa editorial con especias, mapa y cuaderno de recetas.</span>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="grid grid--3" style="margin-top: 1.7rem;">
      {% for block in section.blocks %}
        <article class="card" {{ block.shopify_attributes }}>
          <h3>{{ block.settings.title }}</h3>
          <p class="text-muted">{{ block.settings.text }}</p>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Sobre la marca",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "About"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Una suscripción de especias con foco en sabor, cultura y simplicidad"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Texto",
      "default": "Cada mes seleccionamos blends representativos de un país y los acompañamos con recetas reales para cocinar en casa sin fricción."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Alt imagen",
      "default": "Ingredientes y especias sobre mesa de cocina"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Valor",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Curaduría global"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texto",
          "default": "Cada país se diseña con blends complementarios y receta probada."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sobre la marca",
      "blocks": [
        { "type": "value", "settings": { "title": "Curaduría global" } },
        { "type": "value", "settings": { "title": "Calidad premium", "text": "Especias seleccionadas por aroma, frescura y estabilidad." } },
        { "type": "value", "settings": { "title": "Experiencia guiada", "text": "Tarjeta + QR para que el resultado sea repetible." } }
      ]
    }
  ]
}
{% endschema %}
